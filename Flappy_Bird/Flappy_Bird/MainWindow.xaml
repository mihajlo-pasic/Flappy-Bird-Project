<Window x:Class="Flappy_Bird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird" Height="500" Width="400" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <Canvas Name="GameCanvas" Background="SkyBlue" 
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Name="ScoreText" Text="Score: 0" FontSize="20" FontWeight="Bold" Foreground="White" 
           Canvas.Left="10" Canvas.Top="10"/>

        <Rectangle Name="Bird" Width="20" Height="20" Fill="Yellow" Canvas.Left="50" Canvas.Top="200"/>
    </Canvas>
</Window>
